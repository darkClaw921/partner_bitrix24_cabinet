# ============================================
# Partner Bitrix24 Cabinet — Environment Config
# ============================================
# Скопируй этот файл: cp .env.example .env
# и заполни значения перед запуском

# ---- b24-transfer-lead service ----
B24_MAIN_DB_URL=sqlite:///./data/main.db
B24_WORKFLOWS_DIR=./data/workflows
B24_SECRET_KEY=dev-b24-secret
B24_INTERNAL_API_KEY=dev-internal-api-key
B24_ADMIN_USERNAME=cabinet_admin
B24_ADMIN_PASSWORD=cabinet_admin_pass
B24_ENABLE_DOCS=true
B24_FRONTEND_URL=http://localhost:5173


# ---- Workflow defaults (applied to every new partner) ----
B24_ENTITY_TYPE=lead
# B24_DEAL_CATEGORY_ID=0
# B24_DEAL_STAGE_ID=NEW
B24_LEAD_STATUS_ID=NEW
# B24_FIELD_MAPPINGS — JSON array of field mappings. Each item:
#   field_name         — internal name (e.g. "email", "company")
#   display_name       — UI label (e.g. "Email")
#   bitrix24_field_id  — Bitrix24 field ID (e.g. "EMAIL", "COMPANY_TITLE", "UF_CRM_...")
#   entity_type        — "lead" or "deal"
#   update_on_event    — true/false, update on Bitrix24 webhook
# Example:
# B24_FIELD_MAPPINGS=[{"field_name":"email","display_name":"Email","bitrix24_field_id":"EMAIL","entity_type":"lead","update_on_event":false},{"field_name":"company","display_name":"Компания","bitrix24_field_id":"COMPANY_TITLE","entity_type":"lead","update_on_event":false}]
# B24_FIELD_MAPPINGS=[{"field_name":"email","display_name":"Email","bitrix24_field_id":"EMAIL","entity_type":"lead","update_on_event":false},{"field_name":"company","display_name":"Компания","bitrix24_field_id":"COMPANY_TITLE","entity_type":"lead","update_on_event":false}]



# ---- Backend ----
